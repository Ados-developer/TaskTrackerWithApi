@model List<TaskDto>

<h2>Tasks</h2>
<a class="btn btn-primary" asp-action="Create">Pridať novú úlohu</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Is completed</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.IsCompleted</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>