@model TaskDto
<h2>Edit a Task</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <input asp-for="Title" placeholder="Title" required class="form-control" />
    </div>
    <div class="mb-3">
        <input asp-for="Description" placeholder="Description" class="form-control" />
    </div>
    <div class="mb-3">
        <input type="checkbox" asp-for="IsCompleted" class="form-check-input" /> Completed
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Task">Back</a>
</form>
